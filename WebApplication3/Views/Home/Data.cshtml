@model IEnumerable<WebApplication3.Models.ChartDataModel>
@{ ViewData["Title"] = "Data";
    Layout = "_Adminlte"; }

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        @*<ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Data Table With Full Features</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Location 1 temp</th>
                                    <th>Location 1 humidity</th>
                                    <th>Location 2 temp</th>
                                    <th>Location 2 humidity</th>
                                    <th>Location 3 temp</th>
                                    <th>Location 3 humidity</th>
                                    <th>Location 4 temp</th>
                                    <th>Location 4 humidity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Time)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoomTemp1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoomTemp2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MachineTemp1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MachineTemp2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoomHumid1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoomHumid2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MachineHumid1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MachineHumid2)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Time</th>
                                    <th>Location 1 temp</th>
                                    <th>Location 1 humidity</th>
                                    <th>Location 2 temp</th>
                                    <th>Location 2 humidity</th>
                                    <th>Location 3 temp</th>
                                    <th>Location 3 humidity</th>
                                    <th>Location 4 temp</th>
                                    <th>Location 4 humidity</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Styles{
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/adminlte/components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/adminlte/components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/adminlte/dist/css/skins/_all-skins.min.css">

    <link rel="stylesheet" href="~/adminlte/components/font-awesome/css/googlefont.css">
}


@section Scripts{
    <!-- jQuery 3 -->
    <script src="~/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- DataTables -->
    <script src="~/adminlte/components/datatables.net/js/jquery.dataTables.js"></script>
    <script src="~/adminlte/components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/adminlte/components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/adminlte/components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/adminlte/dist/js/demo.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })</script>

    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

    @*<script src="~/js/Data.js"></script>*@
}

